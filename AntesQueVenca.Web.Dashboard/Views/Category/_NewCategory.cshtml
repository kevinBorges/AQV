                <div class="col-md-12">
                    <form>
                        <div class="row">
                            <div class="form-group col-12">
                                <label for="exampleInputEmail1">Categoria</label>
                                <input type="text" class="form-control" id="CategoryAlterar" aria-describedby="categoryText" placeholder="Categoria">
                            </div>
                            <div class="form-group col-12">
                                <button type="submit" class="btn btn-primary" onclick="UpdateCategory();">Cadastrar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

