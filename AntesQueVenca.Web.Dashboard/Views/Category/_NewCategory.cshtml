<div id="modalCategoriaAtualizar" class="modal fade bd-example-modal-lg  md-effect-13" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <span id="idCategoryAlterar" style="display:none;"></span>
