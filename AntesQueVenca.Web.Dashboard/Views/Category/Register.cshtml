    <!-- modal-window-effects css -->
    <link rel="stylesheet" href="~/assets/plugins/modal-window-effects/css/md-modal.css">
    <script>
        lightbox.option({
            'resizeDuration': 200,
            'wrapAround': true
        })

        function OpenUpdateModal(id,name) {
            $("#idCategoryAlterar").val(id);
            $("#CategoryAlterar").val(name);
            $("#modalCategoriaAtualizar").modal('show');
        }

        function DeleteConfirmation(id, name) {
            $("#idCategoryDelete").val(id);
            $("#CategoryDelete").text(name);
            $("#modalCategoriaDelete").modal('show');
        }

    </script>
